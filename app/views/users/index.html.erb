<div class= "container px-5 px-sm-0">
  <div class= "row">
    <div class= "col-md-3">
      <h2>User info</h2>
        <table>
          <tbody>
            <tr>
              <th><%= image_tag current_user.get_profile_image(100,100)%></th>
            </tr>
            <tr>
              <th>name</th>
              <th><%= current_user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= current_user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <a class="btn btn-outline-secondary btn-block edit_user_path" href="/users/:id/edit">
            <i class="fa-solid fa-user-gear"></i>
          </a>
        </div>
        <%= form_for(@book, url: books_path) do |f| %>
          <h2>New book</h2>
          <h4>Title</h4>
          <%= f.text_field :title, class: "col-xs-12" %>
          <h4>Opinion</h4>
          <%= f.text_area :opinion, class: "col-xs-12" %>
          <nav>
            <%= f.submit 'Create Book', class: "col-xs-12 btn btn-success" %>
          </nav>
        <% end %>
    </div>
    <div class= "col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
          </thead>
        <% @users.each do |user| %>
          <tbody>
            <tr>
              <th><%= image_tag user.books.first.get_profile_image(100,100) if user.books.present? %></th>
              <th><%= user.name %></th>
              <th><%= link_to"Show",user_path(user.id) %></th>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>


