<div class= "container px-5 px-sm-0">
  <div class= "row">
    <div class= "col-md-3">
      <h2>User info</h2>
      <% if @user.present? %>
        <% if @user.profile_image.attached? %>
          <%= image_tag @user.profile_image.variant(resize: "100x100") %>
        <% else %>
          <%= image_tag '/bookers2/app/assets/images/no_image .jpg', size: "80x80" %>
        <% end %>
        <table>
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <a class="btn btn-outline-secondary btn-block edit_user_path" href="/users/:id/edit">
            <i class="fa-solid fa-user-gear"></i>
          </a>
        </div>
        <%= form_for(@book, url: books_path) do |f| %>
          <h2>New book</h2>
          <h4>Title</h4>
          <%= f.text_field :title, class: "col-xs-12" %>
          <h4>Opinion</h4>
          <%= f.text_area :opinion, class: "col-xs-12" %>
          <nav>
            <%= f.submit 'Create Book', class: "col-xs-12 btn btn-primary" %>
          </nav>
        <% end %>
      <% end %>
    </div>
    <div class= "col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td>
                  <% if book.image.attached? %>
                    <td><%= image_tag book.image, size: "70x70" %></td>
                  <% else %>
                    <td><%= image_tag 'no_image', size: "70x70" %></td>
                  <% end %>
                </td>
              </tr>
            <% end %>
              <td>
                <% if @books.any? %>
                  <td><%= @books.first.title %></td>
                <% else %>
                  <td>No books available</td>
                <% end %>
              </td>
              <td>interesting</td>
            </tr>
          </tbody>
      </table>
    </div>
  </div>
</div>