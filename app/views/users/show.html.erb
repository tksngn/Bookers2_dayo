<div class= "container px-5 px-sm-0">
  <div class= "row">
    <div class= "col-md-3">
      <h2>User info</h2>

        <table>
          <tbody>
            <tr>
              <th><%= image_tag current_user.get_profile_image(100,100)%></th>
            </tr>
            <tr>
              <th>name</th>
              <th><%= current_user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= current_user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <a class="btn btn-outline-secondary btn-block edit_user_path" href="/users/:id/edit">
            <i class="fa-solid fa-user-gear"></i>
          </a>
        </div>
        <%= form_for(@book, url: books_path) do |f| %>
          <h2>New book</h2>
          <h4>Title</h4>
          <%= f.text_field :title, class: "col-xs-12" %>
          <h4>Opinion</h4>
          <%= f.text_area :opinion, class: "col-xs-12" %>
          <nav>
            <%= f.submit 'Create Book', class: "col-xs-12 btn btn-success" %>
          </nav>
        <% end %>
    </div>
    <div class= "col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= image_tag book.get_profile_image(100,100) if book.profile_image.attached? %>
                <br>
                <%= link_to current_user.name, user_path(current_user.id) %>
              </td>
              <td>
                <%= link_to book.title, book_path(book.id), class: 'book_' + book.id.to_s %>
              </td>
              <td><%= book.opinion %></td>
              <td>
                <%= link_to 'Edit', edit_book_path(book.id), class: 'btn btn-sm btn-success edit_book_' + book.id.to_s %>
              </td>
              <td>
                <%= link_to 'Destroy', book_path(book.id), data: { confirm: '本当に消しますか？' }, method: :delete, class: 'btn btn-sm btn-danger destroy_book_'+ book.id.to_s, rel: 'nofollow' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>