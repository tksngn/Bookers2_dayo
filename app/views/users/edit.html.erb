<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>
        <% if @user.errors.any? %>
          <h3><%= pluralize(@user.errors.count, "error") %>
            prohibited this obj from being saved:</h3>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>

        <%= form_with(model: @user, url: user_path(@user), method: :patch, html: { enctype: "multipart/form-data" }) do |form| %>
          <%= form.hidden_field :authenticity_token %>
          <div class="form-group">
            <%= form.label :name, "Name" %>
            <%= form.text_field :name, class: "form-control name", id: "user_name" %>
          </div>
          <div class="form-group">
            <%= form.label :profile_image, "Image" %>
            <%= form.file_field :profile_image, class: "form-control-file user_profile_image", accept: "image/*", id: "user_profile_image" %>
          </div>
          <div class="form-group">
            <%= form.label :introduction, "Introduction" %>
            <%= form.text_area :introduction, class: "form-control introduction", id: "user_introduction" %>
          </div>
          <div class="form-group">
            <%= form.submit "Update User", class: "btn btn-secondary user_path", data: { disable_with: "Update User" } %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>
