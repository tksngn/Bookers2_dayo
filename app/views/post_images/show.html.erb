<div>
  <%= image_tag @post_image.get_image %>
    <p>name：<%= @post_image.name %></p>
    <p>introduction：<%= @post_image.introduction %></p>
    <p>user_image：<%= image_tag 'sample-author1.jpg' %></p>
    <p>user_name：<%= @post_image.user.name %></p>
    <p>投稿日時：<%= @post_image.created_at.strftime('%Y/%m/%d') %></p>
    <% if @post_image.user == current_user %>
    <%= link_to "delete", post_image_path(@post_image), method: :delete %>
  <% end %>
</div>