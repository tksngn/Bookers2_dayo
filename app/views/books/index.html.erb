<h1>User info</h1>
<% if @user.errors.any? %>
  <%= @user.errors.count %> errors prohibited this user from being saved:
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
<% end %>
<% if @post_image %>
  <div>
    <%= image_tag @post_image.get_image %>
    <p>Image：<%= image_tag 'sample-author1.jpg' %></p>
    <p>name：<%= @post_image.user.name %></p>
    <p>投稿日：<%= @post_image.created_at.strftime('%Y/%m/%d') %></p>
  </div>
<% else %>
  <p>No post image available.</p>
<% end %>
  <h6>name</h6>
    <%= @user.name %>
  <h6>introduction</h6>
    <%= @user.introduction %>

<% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <br>
    <td><%= book.opinion %></td>
    <td>
      <%= link_to "Edit", edit_book_path(book.id) %>
    </td>
    <td>
      <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
    </td>
  </tr>
<% end %>

<h1>New book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with model: Book do |f| %>
  <h6>Title</h6>
  <%= f.text_field :title %>
  <h6>Opinion</h6>
  <%= f.text_area :body %><br>
  <%= f.submit 'Create Book' %>
<% end %>