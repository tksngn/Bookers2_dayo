<div class="container">
  <div class="col-md-16 mx-auto">
    <% if @book.errors.any? %>
        <h3><%= pluralize(@book.errors.count, "error") %>
          prohibited this obj from being saved:</h3>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
    <% end %>
  </div>
</div>

<main>
  <div class= "container px-5 px-sm-0">
    <div class= "row">
      <div class= "col-md-3">
        <h2>User info</h2>
        <tr>
          <th><%= image_tag current_user.get_profile_image(100,100)%></th>
        </tr>
        <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <th><%= current_user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= current_user.introduction %></th>
            </tr>
          </tbody>
        </table>
          <div class="row">
            <%= link_to edit_user_path(current_user), class:"btn btn-outline-secondary btn-block" do%>
              <i class="fas fa-user-cog"></i>
            <% end %>
          </div>
          <h2 class="mt-3">New book</h2>
          <%= form_with model: @book, url: books_path do |form| %>
            <div class="form-group">
              <label for="book_title">Title</label>
              <%= form.text_field :title, id: "book_title", class: "form-control" %>
            </div>
            <div class="form-group">
              <label for="book_opinion">Opinion</label>
              <%= form.text_area :opinion, id: "book_opinion", class: "form-control" %>
            </div>
            <nav>
              <%= form.submit 'Create Book', class: "btn btn-success btn-block" %>
            </nav>
          <% end %>
      </div>
      <div class= "col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table">
            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @books.each do |book| %>
                <tr>
                  <td>
                    <%= image_tag book.get_profile_image(100,100) if book.profile_image.attached? %>
                  </td>
                  <td>
                    <%= link_to book.title, book_path(book.id), class: 'book_' + book.id.to_s %>
                  </td>
                  <th>
                    <%= book.opinion %>
                  </th>
                </tr>
              <% end %>
            </tbody>
        </table>
      </div>
    </div>
  </div>
</main>