<% if @book.errors.any? %>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class= "container px-5 px-sm-0">
  <div class= "row">
    <div class= "col-md-3">
      <h2>User info</h2>

        <table>
          <tbody>
            <tr>
              <th><%= image_tag current_user.get_profile_image(100,100)%></th>
            </tr>
            <tr>
              <th>name</th>
              <th><%= current_user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= current_user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <a class="btn btn-outline-secondary btn-block edit_user_path" href="/users/:id/edit">
            <i class="fa-solid fa-user-gear"></i>
          </a>
        </div>
        <%= form_for(@book, url: books_path) do |f| %>
          <h2>New book</h2>
          <h4>Title</h4>
          <%= f.text_field :title, class: "col-xs-12" %>
          <h4>Opinion</h4>
          <%= f.text_area :opinion, class: "col-xs-12" %>
          <nav>
            <%= f.submit 'Create Book', class: "col-xs-12 btn btn-success" %>
          </nav>
        <% end %>
    </div>
    <div class= "col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td>
                  <%= image_tag book.get_profile_image(100,100) if book.profile_image.attached? %>
                </td>
                <td>
                  <%= link_to book.title, book_path(book.id), class: 'book_' + book.id.to_s %>
                </td>
                <th>
                  <%= book.opinion %>
                </th>
              </tr>
            <% end %>
          </tbody>
      </table>
    </div>
  </div>
</div>