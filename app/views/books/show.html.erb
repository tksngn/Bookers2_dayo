<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
          <% if @user.present? %>
            <% @users.each do |user| %>
              <% if user.profile_image.attached? %>
                <%= image_tag user.profile_image.variant(resize: "100x100") %>
              <% else %>
                <%= image_tag 'no_image.jpg', size: "60x60" %>
              <% end %>
            <% end %>
            <table class="table">
              <tbody>
                <tr>
                  <th>Name</th>
                  <td><%= @book.user.name %></td>
                </tr>
                <tr>
                  <th>Introduction</th>
                  <td><%= @book.user.introduction %></td>
                </tr>
              </tbody>
            </table>
            <div class="row">
              <a class="btn btn-outline-secondary btn-block" href="/users/<%= @book.user.id %>/edit">
                <%= link_to edit_user_path(@book.user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" do %>
                  <i class="fa-solid fa-user-gear"></i>
                <% end %>
              </a>
            </div>
          <% end %>
          <h2 class="mt-3">New book</h2>
          <%= form_for(@book_new, url: books_path) do |f| %>
            <div class="form-group">
              <%= f.label :title %>
              <%= f.text_field :title, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.submit 'Create Book', class: "col-xs-12 btn btn-success" %>
            </div>
          <% end %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
          <table class="table">
            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @books.each do |book| %>
                <tr>
                  <td>
                    <%= image_tag book.get_profile_image(100, 100) if book.profile_image.attached? %>
                  </td>
                  <td>
                    <%= link_to book.title, book_path(book.id), class: 'book_' + book.id.to_s %>
                  </td>
                  <td>
                    <%= book.opinion %>
                  </td>
                  </tr>
              <% end %>
            </tbody>
          </table>
      </div>
    </div>
  </div>
</main>
