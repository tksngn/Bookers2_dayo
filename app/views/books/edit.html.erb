<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h1>Editing Book</h1>
        <% if @book.errors.any? %>
          <h3><%= pluralize(@book.errors.count, "error") %>
            prohibited this obj from being saved:</h3>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
        <%= form_with(model: @book, url: book_path(@book), method: :patch, html: { enctype: "multipart/form-data" }) do |form| %>
          <%= form.hidden_field :authenticity_token %>
          <div class="form-group">
            <label for="book_title">Title</label>
            <input class="form-control book_title" name="book[title]" id="book_title">
          </div>
          <div class="form-group">
            <label for="book_opinion">Opinion</label>
            <textarea class="form-control book_opinion" name="book[opinion]" id="book_opinion"></textarea>
  　      </div>
  　      <div class="form-group">
  　        <input type="submit" name="commit" value="Update Book" class="btn btn-success" data-disable-with="Update Book">
  　      </div>
  　    <% end %>
        <%= link_to "show",user_path(@book.id)%>
          |
        <%= link_to "Back",books_path %>
      </div>
    </div>
  </div>
</main>