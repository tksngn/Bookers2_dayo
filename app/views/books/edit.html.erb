<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <% if @book.errors.any? %>
        <h3><%= pluralize(@book.errors.count, "error") %>
          prohibited this obj from being saved:</h3>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with(model: @book, url: book_path(@book.user), method: :patch, html: { enctype: "multipart/form-data" }) do |form| %>
        <%= form.hidden_field :authenticity_token %>
        <div class="form-group">
          <label for="book_title">Title</label>
          <%= form.text_field :title, class: "form-control book_title" %>
        </div>
        <div class="form-group">
          <label for="book_body">opinion</label>
          <%= form.text_area :body, class: "form-control book_body" %>
　      </div>
　      <div class="form-group">
　        <%= form.submit "Update Book", class: "btn btn-success", data: { disable_with: "Updating.." } %>
　      </div>
　    <% end %>
      <%= link_to "Show",book_path(@book.user) %>
        |
      <%= link_to "Back",books_path %>
    </div>
  </div>
</div>
