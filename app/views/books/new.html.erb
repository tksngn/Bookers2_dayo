<h1>User info</h1>
<%= form_with model: Book.new do |f| %>
  <%= f.file_field :image, accept: "image/*" %>
  <h6>name</h6>
  <%= @user.name %>
  <h6>introduction</h6>
  <%= @user.introduction %>
<% end %>

<h1>New book</h1>
<%= form_with model: Book.new do |f| %>
  <h6>Title</h6>
  <%= f.text_field :title %>
  <h6>Opinion</h6>
  <%= f.text_area :body %><br>
  <%= f.submit 'Create Book' %>
<% end %>